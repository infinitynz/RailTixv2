@model RailTix.Models.ViewModels.Events.EventEditViewModel
@{
	ViewData["Title"] = "Create Event";
}

@section Styles {
	<link rel="stylesheet" href="~/css/components/forms.css" asp-append-version="true" />
}

<section class="section">
	<div class="form-shell form-shell--wide">
		<div class="form-shell__header">
			<h1 class="form-shell__title">Create Event</h1>
			<p class="form-shell__subtitle">Set up event details, schedule, and venue information before publishing.</p>
		</div>

		<form method="post" class="form-shell__body">
			@Html.AntiForgeryToken()
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			@await Html.PartialAsync("_EventForm", Model)

			<div class="form-actions">
				<button type="submit" class="btn btn-primary">Create Event</button>
				<a href="/account/events" class="btn btn-outline-danger">Cancel</a>
			</div>
		</form>
	</div>
</section>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

